<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_item_place"
            android:layout_toStartOf="@+id/checkBox_item" />

        <ImageView
            android:id="@+id/iv_item_place"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:scaleType="matrix" />


        <TextView
            android:id="@+id/tv_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_place"
            android:layout_toEndOf="@+id/iv_item_place"
            android:layout_toRightOf="@+id/iv_item_place" />

        <CheckBox
            android:id="@+id/checkBox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_title"
            android:layout_alignBottom="@+id/tv_item_title"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_item_distance"
            android:layout_below="@+id/checkBox_item"
            android:layout_toEndOf="@+id/iv_item_place"
            android:layout_toStartOf="@+id/checkBox_item"
            android:ellipsize="end" />
    </RelativeLayout>
</android.support.v7.widget.CardView>